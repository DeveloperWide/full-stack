<% layout("./boilerplate/boilerplate.ejs") %>

<div class="show-listing">
  <h3 class="listing-title"><%= listing.title %></h3>
  <p class="listing-location">
    <%= listing.location %>, <%= listing.country %>
  </p>

  <div class="listing-img">
    <img src="<%= listing.image %>" alt="<%= listing.title %>" />
  </div>
  <p class="listing-description"><%= listing.description %></p>
  <hr />
  <div class="row">
    <p class="listing-price">
      <b>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</b>
    </p>
    <div class="left-side">
      <a href="/listings/<%= listing._id %>/edit" class="edit-btn"
        ><button>Edit</button></a
      >
      <br /><br />
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="delete-btn" style="background-color: red">Delete</button>
      </form>
    </div>
  </div>
  <br />
  <div class="create-review">
    <h1>New Review</h1>
    <div class="review-form">
      <form action="/listings/<%=listing._id%>/reviews" method="post">
        <div class="form-group">
          <label for="reviewRating">Rating:</label>
          <input
            type="range"
            name="review[rating]"
            id="reviewRating"
            min="1"
            max="5"
          />
        </div>
        <div class="form-group">
          <label for="reviewRating">Comment:</label>
          <textarea
            placeholder="Enter Your Experience here..!"
            name="review[comment]"
            id="reviewComment"
            cols="30"
            rows="5"
          ></textarea>
        </div>
        <input type="submit" value="Submit" />
      </form>
    </div>
    <br />
    <hr />
    <br />
    <div class="show-reviews">
      <h2>All Reviews</h2>
      <div>
        <% for( let review of listing.reviews) { %>
        <p><%= review.comment %> , <%= review.rating %> stars</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
