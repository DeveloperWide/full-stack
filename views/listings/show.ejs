<% layout("./boilerplate/boilerplate.ejs") %>

<style>
  .show-listing {
    display: flex;
    flex-direction: column;
    width: 80vw;
    justify-content: center;
    align-content: center;
    text-align: center;
    margin: 20px auto;
  }

  .listing-title {
    color: #0d6efd;
    font-size: 30px;
    padding: 1.5%;
    text-transform: capitalize;
  }

  .listing-location {
    color: #33333383;
    margin-bottom: 10px;
    font-weight: 600;
    font-size: 15px;
  }

  .listing-img {
    display: flex;
    justify-content: center;
    align-content: center;
    width: 80%;
    border-radius: 20px;
    margin: 0 auto;
    padding: 30px;
  }

  .listing-img img {
    width: 100%;
    border-radius: 20px;
    object-fit: cover;
  }

  .listing-description {
    width: 70%;
    margin: 0 auto;
    color: black;
    font-size: 20px;
    margin-bottom: 10px;
    text-align: start;
  }

  hr {
    width: 70%;
    margin: 0px auto;
  }

  .listing-price {
    width: 70%;
    color: #198754;
    font-size: 30px;
    text-align: start;
    margin: 10px 12px;
  }

  .row {
    display: flex;
    flex-direction: row;
    width: 70%;
    margin: 0 auto;
  }

  .row .left-side {
    display: flex;
    flex-direction: row;
    margin: 20px;
  }

  .left-side button {
    padding: 10px;
    margin: 5px 10px;
    border: none;
    border-radius: 5px;
    font-weight: 500;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
  }
  .edit-btn button {
    padding: 10px;
    margin: 5px 10px;
    border: none;
    border-radius: 5px;
    font-weight: 500;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    cursor: pointer; /* Ensure pointer cursor */
    background-color: #0d6efd; /* Optional: Blue like Bootstrap */
    color: white;
  }

  .delete-btn {
    color: white;
  }

  .delete-btn:hover {
    cursor: pointer;
  }
</style>

<div class="show-listing">
  <h3 class="listing-title"><%= listing.title %></h3>
  <p class="listing-location">
    <%= listing.location %>, <%= listing.country %>
  </p>

  <div class="listing-img">
    <img src="<%= listing.image %>" alt="<%= listing.title %>" />
  </div>
  <p class="listing-description"><%= listing.description %></p>
  <hr />
  <div class="row">
    <p class="listing-price">
      <b>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</b>
    </p>
    <div class="left-side">
      <a href="/listings/<%= listing._id %>/edit" class="edit-btn"
        ><button>Edit</button></a
      >
      <br /><br />
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="delete-btn" style="background-color: red">Delete</button>
      </form>
    </div>
  </div>
</div>
