<% layout("./boilerplate/boilerplate.ejs") %>

<!-- <a href="/listings/new"><button>Create New Listing</button></a> -->
<div class="cards-container">
  <% for(listing of allListings) {%>
  <a href="/listings/<%= listing._id %>">
    <div class="card">
      <img src="<%= listing.image %>" alt="<%= listing.title %>" />
      <p><b><%= listing.title %></b></p>
      <p style="color: rgba(0, 0, 0, 0.452); padding: 0px 15px">
        <b>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</b>
      </p>
    </div>
  </a>
  <% } %>
</div>
